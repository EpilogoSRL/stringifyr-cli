{
    "compilerOptions": {
      "noImplicitAny": false,
      "outDir": "build/types",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
    },
    "include": ["src/lib"]
}
